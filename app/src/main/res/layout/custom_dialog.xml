<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 닫기 버튼 -->
    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end"
        android:background="@null"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:tint="#634E9E" />

    <!-- 제목 -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="이용 안내 및 주의 사항"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- 안내 메시지 1 -->
    <TextView
        android:id="@+id/dialogMessage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앱 이용 시 아래 사항을 꼭 확인해주세요."
        android:textSize="16sp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="18sp"
        android:autoSizeStepGranularity="2sp"
        android:gravity="center" />

    <!-- 안내 메시지 2 -->
    <TextView
        android:id="@+id/dialogMessage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:text=""
        android:textSize="12sp" />

    <!-- 🔽 아래부터 ScrollView로 감싸기 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ViewPager -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="454dp"
                android:layout_marginTop="8dp" />

            <!-- 인디케이터 -->
            <LinearLayout
                android:id="@+id/indicatorLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal" />

            <!-- 설명 텍스트 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="16dp"
                android:text="추가 시도 횟수 획득 방법"
                android:textSize="18sp" />

            <!-- 버튼들 가로 정렬 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/popmenu_bt1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="12sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:textSize="10sp"
                    android:text="+광고보기" />

                <ImageView
                    android:id="@+id/my4"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="10dp" />

                <Button
                    android:id="@+id/popmenu_bt2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="12sp"
                    android:autoSizeMinTextSize="10sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:textSize="10sp"
                    android:text="앱공유하기" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>